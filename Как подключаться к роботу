ssh pi@turtlebroNN.local                                NN - номер робота
                                                        pi - имя пользователя под которым нужно зайти в систему робота

ssh pi@192.168.0.11                                     - этот способ работает всегда, но нужно знать ip робота                                                       
                                                        
export ROS_MASTER_URI='http://192.168.0.243:11311'      - подключение локального ros к удалённому мастеру, для выполнения локалных команд на удалённом устройстве
export ROS_HOSTNAME=192.168.0.184



https://manual.turtlebro.ru/pervoe-vklyuchenie/ssh

https://manual.turtlebro.ru/pervoe-vklyuchenie/podklyuchenie-iz-ros


export ROS_MASTER_URI указывает локальному росу где мастер                  (нужно заранее знать адрес робота)
export ROS_HOSTNAME локальному мастеру при подключении указывает где клиент (адрес локальной машины проверяется через ifconfig)


turtlebro - одометрия по энкодерам, угол поворота по imu
